<html lang="en">
<%- include("./partials/head.ejs") %>

  <body class="bg-gray-100 font-sans">

    <!-- Include navigation -->
    <%- include("./partials/nav.ejs") %>

      <!-- Main content section -->
      <div class="container mx-auto px-4 py-8">

        <div class="bg-white shadow-md rounded-lg p-6 md:p-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-800">Create Blog</h2>
          <form action="/blogs" method="POST" class="space-y-4">
            <div class="flex flex-col">
              <label for="title" class="text-gray-700">Blog Title:</label>
              <input type="text" id="title" name="title"
                class="border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm"
                required>
            </div>
            <div class="flex flex-col">
              <label for="snippet" class="text-gray-700">Blog Snippet:</label>
              <input type="text" id="snippet" name="snippet"
                class="border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm"
                required>
            </div>
            <div class="flex flex-col">
              <label for="body" class="text-gray-700">Blog Body:</label>
              <textarea id="body" name="body" rows="6"
                class="border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm"
                required></textarea>
            </div>
            <div class="flex justify-center">
              <button type="submit"
                class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">Submit</button>
            </div>
          </form>
        </div>



      </div>
      <!-- Include footer -->
      <%- include("./partials/footer.ejs") %>

  </body>

</html>